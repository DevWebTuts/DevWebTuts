// App Shared Color Variables
// --------------------------------------------------
// It's highly recommended to change the default colors
// to match your app's branding.

$primary = #172A3A
$secondary = #27AE60
$tertiary = #0B1924

$neutral = #E0E1E2
$positive = #21BA45
$negative = #DB2828
$info = #31CCEC
$warning = #F2C037

.vh-100
    height 100vh
    &-min
        min-height 100vh
    &-max
        max-height 100vh

.m-a
    margin auto

.ov
    background rgba(0, 0, 0, .5)

.bg-secondary-alpha-8
    background: alpha($primary, 0.8) !important

.author
    cursor pointer
    border: $secondary 2px solid
    border-radius 50%
    height 300px
    width 300px

::-webkit-scrollbar
    width 10px
    background: alpha($primary, 0.8) !important

::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 6px rgba(0, 0, 0, 0.3)
    border-radius 10px

::-webkit-scrollbar-thumb
    border-radius 10px
    -webkit-box-shadow inset 0 0 6px rgba(0, 0, 0, 0.5)
    background: alpha($secondary, 0.8) !important

.CodeEditorDialog + .CodeMirror
    max-height calc(100vh - 52px) !important
    height calc(100vh - 52px) !important

pre code {
    display: block;
    overflow-x: auto;
    padding: .5em;
    background: #272822;
    color: #ddd;
}

img
    max-width 100%
    max-height 100%

.masonry
    column-count 4
    column-gap 0

@media (min-width: 200px)
    .masonry
        -moz-column-count 1
        -webkit-column-count 1
        column-count 1

@media (min-width: 400px)
    .masonry
        -moz-column-count 2
        -webkit-column-count 2
        column-count 2

@media (min-width: 700px)
    .masonry
        -moz-column-count 3
        -webkit-column-count 3
        column-count 3

@media (min-width: 900px)
    .masonry
        -moz-column-count 4
        -webkit-column-count 4
        column-count 4

@media (min-width: 1100px)
    .masonry
        -moz-column-count 5
        -webkit-column-count 5
        column-count 5

.masonry-item
    display inline-block
    margin 0
    width 100%
    transition all .4s

.parallax-attribs
    background-position center center
    background-size contain
    background-attachment fixed
    background-repeat no-repeat

body
    scroll-behavior smooth
    font-family Impact !important

.roboto
    font-family Roboto !important

